for i in 1_1
do
	bowtie2                                         \
		-x           oariMT                     \
		-p           24                         \
		-1           ../trimmed/${i}_1.fastq.gz \
		-2           ../trimmed/${i}_2.fastq.gz \
		--un-gz      ${i}_U.nomito.fastq.gz     \
		--un-conc-gz ${i}_%.nomito.fastq.gz     \
		--al-gz      ${i}_U.mito.fastq.gz       \
        	--al-conc-gz ${i}_%.mito.fastq.gz       \
        	-S/dev/null                             \
	2> resultsMT
done
