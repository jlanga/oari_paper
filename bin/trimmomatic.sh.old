for individual in 1_1 2_1 3_1 
do
	trimmomatic PE                                                                        \
		-threads 24                                                                   \
		-phred33                                                                      \
		-trimlog ../trimmed/${individual}.log                                                    \
		${individual}_1.fastq.gz                                                      \
		${individual}_2.fastq.gz                                                      \
		../trimmed/${individual}_1.fastq.gz                                           \
		../trimmed/${individual}_3.fastq.gz                                           \
		../trimmed/${individual}_2.fastq.gz                                           \
		../trimmed/${individual}_4.fastq.gz                                           \
		AVGQUAL:3                                                                     \
		ILLUMINACLIP:/usr/local/src/trimmomatic-0.32/adapters/TruSeq3-PE-2.fa:2:30:10 \
		MINLEN:31                                                                     \
		LEADING:19                                                                    \
		TRAILING:19                                                                   \
		MINLEN:31 2> ../trimmed/${individual}.results
done

